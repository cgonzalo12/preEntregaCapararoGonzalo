<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/product.css" />
  </head>
  <body>
    <div>
      <nav id="navbar" class="navbar navbar-expand-lg text-light">
        <h2 class="mx-auto text-light">Producto</h2>
      </nav>
    </div>
    <div class="container-fluid vh-100">
      <div class="row h-100 justify-content-center align-items-start">
        <div class="col-12 col-md-6 col-lg-4 mt-5">
          <div class="card">
            {{#if thumbnail}}
              <img
                src="/images/products/{{thumbnail}}"
                class="card-img-top"
                style="max-height: 200px;"
              />
            {{/if}}
            <div class="card-body">
              <h5 class="card-title">{{title}}</h5>
              <p class="card-text">{{description}}</p>
              {{#if isStock}}
                <p>Precio: ${{price}}</p>
                <p>Stock: {{stock}}</p>
                <p>Codigo de producto: {{code}} </p>
              {{else}}
                <p>No hay stock del producto</p>
              {{/if}}

              

              <button
                type="button"
                class="btn btn-primary"
                data-bs-toggle="modal"
                data-bs-target="#exampleModal"
              >
                Actualizar
              </button>
              <button
              class="btn btn-primary"
              id="btnAgregarCart"
              data-pid="{{_id}}">
              Agregar Al carrito
              </button>
              <button
                class="btn btn-danger m-2"
                id="deleteBtn"
                onclick="eliminarProducto('{{_id}}')"
              >Eliminar</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Producto</h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form
              action="/products/update/{{_id}}"
              method="post"
              enctype="multipart/form-data"
              class="card-body"
            >
              <div>
                <input
                  type="text"
                  name="title"
                  id="title"
                  class="form-control mb-3"
                  placeholder="Titulo del producto"
                />
                <textarea
                  class="form-control mb-3"
                  name="description"
                  id="description"
                  placeholder="DescripciÃ³n del producto"
                  rows="6"
                ></textarea>
                <input
                  type="text"
                  name="code"
                  id="code"
                  class="form-control mb-3"
                  placeholder="codigo del producto"
                />
                <input
                  type="number"
                  name="price"
                  id="price"
                  class="form-control mb-3"
                  placeholder="Precio del producto"
                />
                <input
                  type="text"
                  name="categoria"
                  id="categoria"
                  class="form-control mb-3"
                  placeholder="Categoria"
                />
                <input
                  type="number"
                  name="stock"
                  id="stock"
                  class="form-control mb-3"
                  placeholder="Stock del producto"
                />
                <input
                  type="file"
                  name="image"
                  id="image"
                  class="form-control mb-3"
                />
                
              </div>
              <div class="modal-footer">
                <input
                  type="submit"
                  value="Actualizar"
                  class="btn btn-primary"
                />
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >Cerrar</button>
              </div>
            </form>
          </div>
          
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="/js/product.js"></script>
  </body>
</html>