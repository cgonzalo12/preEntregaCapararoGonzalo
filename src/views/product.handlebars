<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/product.css" />
  </head>
  <body>
    <div>
      <nav id="navbar" class="navbar navbar-expand-lg text-light">
        <h2 class="mx-auto text-light">Producto</h2>
      </nav>
    </div>
    <div class="container-fluid vh-100">
      <div class="row h-100 justify-content-center align-items-start">
        <div class="col-12 col-md-6 col-lg-4 mt-5">
          <div class="card">
            {{#if thumbnail}}
              <img
                src="/images/products/{{thumbnail}}"
                class="card-img-top"
                style="max-height: 200px;"
              />
            {{/if}}
            <div class="card-body">
              <h5 class="card-title">{{title}}</h5>
              <p class="card-text">{{description}}</p>
              {{#if isStock}}
                <p>Precio: ${{price}}</p>
                <p>Stock: {{stock}}</p>
                <p>Codigo de producto: {{code}} </p>
              {{else}}
                <p>No hay stock del producto</p>
              {{/if}}

              <button
                class="btn btn-primary"
                id="deleteBtn"
                onclick="eliminarProducto('{{_id}}')"
              >Eliminar</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="/js/new-product.js"></script>

  </body>
</html>