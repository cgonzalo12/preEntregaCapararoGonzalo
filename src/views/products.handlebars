<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Products</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/new-product.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a
                class="nav-link active"
                aria-current="page"
                href="/home"
              >Home</a>
            </li>
            <li class="nav-item">
              <a href="/products/new" class="nav-link active">Nuevo producto</a>
            </li>
            <li class="nav-item">
              <a href="/products" class="nav-link active">Ver todos los
                productos</a>
            </li>
            <li class="nav-item">
              <a href="/products?stock=true" class="nav-link active">Ver solo con
                stock</a>
            </li>
            <li class="nav-item">
              <a href="/products?categoria=plato" class="nav-link active">Platos</a>
            </li>
            <li class="nav-item">
              <a href="/products?categoria=set" class="nav-link active">Set</a>
            </li>
            <li class="nav-item">
              <a href="/products?categoria=otros" class="nav-link active">Otros</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-3">
      <div
        class="row row-cols-1 row-cols-md-2 row-cols-lg-2 justify-content-center"
      >
        <div class="row">
          <div class="col-md-6">
            <div class="card">
              <div class="card-header text-light" id="card-header">
                Filtros
              </div>
              <div class="card-body" id="show-products">
                <div class="container">
                  <ul class="list-group list-group-flush">
                    
                      <li class="list-group-item text-center">
                        <h4>Stock</h4>
                        <a href="/products" class="nav-link active">Ver todos los  productos</a>
                        <a href="/products?limit=5" class="nav-link active">x5</a>
                        <a href="/products?limit=2" class="nav-link active">x2</a>
                        <a href="/products?stock=true" class="nav-link active">Ver solo con stock</a>
                        <h4>Categorias</h4>
                        <a href="/products?categoria=plato" class="nav-link active">Platos</a>
                        <a href="/products?categoria=set" class="nav-link active">Set</a>
                        <a href="/products?categoria=otros" class="nav-link active">Otros</a>
                      </li>
                    
                  </ul>
                </div>
              </div>
            </div>
          </div>
          
          <div class="col-md-6">
            <div class="card">
              <div class="card-header text-light" id="card-header">
                Productos
                <h3>{{idCart}}</h3>
              </div>
              <div class="card-body" id="show-products">
                <div class="container">
                  <ul class="list-group list-group-flush">
                    {{#if user.exist}}
                    {{#each products.docs}}
                      <li class="list-group-item text-center">
                        <a href="/products/{{this._id}}" class="btn btn-primary w-30">{{this.title}}</a>
                        <a href="/products/update/{{this._id}}" class="btn btn-primary w-20 m-2">actualizar</a>
                        <a onclick="addThoCart('{{this._id}}','{{this.idCart}}')" class="btn btn-danger w-20 m-2">agregar al carrito</a>
                      </li>
                    {{/each}}
                    {{else}}
                    {{#each products.docs}}
                      <li class="list-group-item text-center">
                        <a href="/products/{{this._id}}" class="btn btn-primary w-30">{{this.title}}</a>
                        <a href="/products/update/{{this._id}}" class="btn btn-primary w-20 m-2">actualizar</a>
                        <a href="/login" class="btn btn-danger w-20 m-2">iniciar sesion</a>                 
                      </li>
                    {{/each}}
                    {{/if}}
                    
                  </ul>
                </div>
                <div class="container">
                  <div class="text-center">
                    {{#if products.hasPrevPage}}
                      <a href={{products.prevLink}}>Anterior</a>
                    {{/if}}
                    {{#if products.hasNextPage}}
                      <a href={{products.nextLink}}>Siguiente</a>
                    {{/if}}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
        <script src="/js/product.js"></script>
  </body>
</html>